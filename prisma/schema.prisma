generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id                         // Clerk user ID (e.g. "user_xyz123")
  projects Project[]                             // One-to-many: User â†’ Projects
}

model Project {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // GitHub Integration
  githubRepoName String?  // Custom repo name chosen by user
  githubRepoUrl  String?  // Full GitHub repo URL
  githubEnabled  Boolean  @default(false) // Whether auto-push is enabled

  messages  Message[]
}

enum MessageRole {
  USER
  ASSISTANT
}

enum MessageType {
  RESULT
  ERROR
}

model Message {
  id        String      @id @default(uuid())
  content   String
  role      MessageRole
  type      MessageType
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  projectId String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  fragment  Fragment?
}

model Fragment {
  id         String   @id @default(uuid())
  messageId  String   @unique
  message    Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  sandboxUrl String
  title      String
  files      Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Usage {
  key String @id
  points Int
  expire DateTime?
}